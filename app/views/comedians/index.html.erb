<% @comedians.each do |comedian| %>
<section id="comedian-<%=comedian.id%>">
  <br>
    <img src=  <%= comedian.image_url %> alt= <%= comedian.name.delete(" ") %> >
    <h2>Comedian name: <%= comedian.name %></h2>
    <p>Age: <%= comedian.age %></p>
    <p>Birthplace: <%= comedian.birthplace %></p>
    <p>Total Specials: <%= comedian.count_specials %></p>

    <% comedian.specials.each do |special|  %>
    <p>Special name: <%= special.name %></p>
    <p>Special runtime <%= special.runtime_mins %></p>
    <% end %>
  <% end %>
</section>




